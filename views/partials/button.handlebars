<button type="button" id="add-photo-button"><i class=""></i></button>

<div id="window-backdrop" class="hidden"></div>
<div id="add-photo-window" class="hidden">
  <div class="window-dialog">

    <div class="window-header">
      <h2>Add a Photo</h2>
      <button type="button" class="window-close-button">&times;</button>
    </div>

    <div class="window-body">
      <div class="photo-input-element">
          <label for="photo-url">Insert photo URL</label>
          <input type="text" id="photo-url">
      </div>
      <div class="photo-input-element">
          <label for="photo-caption">Caption your photo</label>
          <input type="text" id="photo-caption">
      </div>
    </div>

    <div class="window-footer">
      <button type="button" class="window-cancel-button">Cancel</button>
